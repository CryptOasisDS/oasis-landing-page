.mechanics
  background: var(--black)
  color: var(--white)
  overflow: hidden
  position: relative
  padding: 83px 0 96px
  &__bg
    position: absolute
    bottom: 0
    left: 0
    right: 0
    margin: auto
    z-index: 1
  &__list
    z-index: 2
    position: relative
    margin-top: 62px
    display: flex
    justify-content: space-between
    @media (max-width: 1000px)
      flex-direction: column
    &__element
      width: 233px
      @media (max-width: 1100px)
        width: 200px
      @media (max-width: 1000px)
        width: 100%
        &:not(:last-child)
          margin-bottom: 45px
      &__number
        color: var(--red)
        font-weight: bold;
        font-size: 3.0625rem
        line-height: 55%
        margin-bottom: 34px
