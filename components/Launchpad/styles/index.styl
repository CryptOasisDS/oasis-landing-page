.launchpad
  position: relative
  background-repeat: no-repeat
  background-position: center bottom
  background-color: var(--yellow-desert)
  background-image: url(/bg-rocket.png)
  background-size: 100%
  height: 100vh
  padding: 120px 0
  @media(max-width: 1000px)
    padding: 35px 0 137px
  .text-red
    color: var(--red)
  .text-bold
    font-weight: bold
  h1
    margin-top: 0
    margin-bottom: 25px
  &__pros
    margin-top: 59px
    display: flex
    align-items: center
    @media(max-width: 1000px)
      flex-direction: column
      align-items: flex-start
    &__element
      display: flex
      align-items: center
      &__image
        width: 64px
        height: 64px
        background-color: var(--brown-desert)
        border-radius: 50%
        margin-right: 13px
      p
        max-width: 105px
        @media(max-width: 1000px)
          max-width: 100%
      &:not(:last-child)
        margin-right: 50px
        @media(max-width: 1000px)
          margin-right: 0
          margin-bottom: 50px
